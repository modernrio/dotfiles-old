## Export variables
export EDITOR="vim"
export PAGER="less"
export BROWSER="firefox"
export MAIL="mutt"
export MOVPLAY="mpv"
export PICVIEW="feh"
export SNDPLAY="mpv"
export DOCVIEWER="zathura"
export TERMINAL="termite"
export PULSE_LATENCY_MSEC=60
export TERM="xterm-256color"
export ETH_IF="eno1"

## Python
alias py='python'
alias py2='python2'
alias py3='python3'

## Fun
alias aquarium='asciiquarium'
alias starwars='telnet towel.blinkenlights.nl'

## Directories
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -Ahsl'
alias lA='ls -ahsl'
alias l='ls -Clh'
alias lP='l ~/Pictures'
alias lD='l ~/Downloads'
alias cD='cd ~/Downloads'
alias cd3='cd ~/.config/i3/'
alias cdC='cd ~/.config'
alias cdD='cd ~/dotfiles'
alias cdM='cd ~/Music/'
alias cdP='cd ~/Projects/'
alias cdT='cd ~/.config/termite/'
alias cdV='cd ~/.vim'
#
## Reloading configs
alias rB='source ~/.bashrc'
alias rX='xrdb -merge ~/.Xresources'
alias rZ='source ~/.zshrc'

## Editing shortcuts
alias e='$EDITOR'
alias e3='$EDITOR ~/.config/i3/config'
alias eA='$EDITOR ~/.aliases'
alias eB='$EDITOR ~/.bashrc && rB'
alias eV='$EDITOR ~/.vimrc'
alias eF='sudo $EDITOR /root/activate-firewall.sh && sudo bash /root/activate-firewall.sh'
alias eX='$EDITOR ~/.Xresources && rX'
alias eI='$EDITOR ~/.xinitrc'
alias eP='sudo $EDITOR /etc/pacman.conf'
alias eT='$EDITOR ~/.config/termite/config'
alias eG='$EDITOR ~/.gitconfig'
alias ec='crontab -e'
alias eC='sudo crontab -e'
alias eS='$EDITOR ~/.sshrc'
alias eZ='$EDITOR ~/.zshrc'

## Misc
alias k='exit'
alias shutdown='shutdown -P now'
alias C='clear'
